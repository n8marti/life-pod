#:kivy 1.0


FloatLayout:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout: # whole center area
        spacing: 5
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': .5, 'center_y': .5}
        MinusButton:
            id: minus
        BoxLayout: # blue buttons & screen frame
            spacing: 5
            size_hint: 0.6, 1.0
            orientation: 'vertical'
            BlueBoxLayout: # top 3 buttons
                EnterButton:
                    id: enter
                SpinButton:
                    id: spin
                UndoButton:
                    id: undo
            ScreenBoxLayout: # screen frame
                orientation: 'vertical'
                ScreenBoxLayout:
                    ScreenLabel:
                        text: "H"
                    ScreenLabel:
                        text: "M"
                    ScreenLabel:
                        text: "E"
                    ScreenLabel:
                        text: "S"
                    ScreenLabel:
                        text: "M"
                    ScreenLabel:
                        text: "C"
                ScreenBoxLayout:
                    ScreenLabel:
                        id: dollars
                        text_size: self.size
                        halign: 'right'
                        text: "0"
                ScreenBoxLayout:
                    ScreenLabel:
                        id: life_points
                        text_size: self.size
                        halign: 'right'
                        text: "0"
            BlueBoxLayout: # bottom 2 buttons
                DollarUnitButton:
                    id: dollar_unit
                LifePointsUnitButton:
                    id: life_points_unit
        PlusButton:
            id: plus

    # Number buttons
    NumButton:
        idx: 0
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 1
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 2
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 3
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 4
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 5
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 6
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 7
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 8
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 9
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()

    NumButton:
        idx: 10
        id: self.get_id()
        text: self.get_text()
        pos_hint: self.get_pos_hint()


<BlueBoxLayout@BoxLayout>:
    size_hint: 1, 0.25
    spacing: 5


<ScreenBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: (0.6, 0.6, 0.6, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<ScreenLabel@Label>:
    color: (0, 0, 0, 1)


<BlueButton@Button>:
    background_normal: ''
    background_color: (0.2, 0.75, 1, 1)
    color: (0, 0, 0, 1)
    bold: True

<EnterButton@BlueButton>:
    text: "Enter"

<SpinButton@BlueButton>:
    text: "Spin"

<UndoButton@BlueButton>:
    text: "Undo"

<DollarUnitButton@BlueButton>:
    text: "$"

<LifePointsUnitButton@BlueButton>:
    text: "Life Points"


<RedButton@Button>:
    background_normal: ''
    background_color: (1, 0, 0.2, 1)
    color: (0, 0, 0, 1)
    bold: True
    size_hint: 0.1, 0.15
    padding: 5
    pos_hint: {'center_x': .5, 'center_y': .5}

<MinusButton@RedButton>
    text: "-"

<PlusButton@RedButton>
    text: "+"

<NumButton>:
    background_normal: ''
    background_color: (0.75, 0.75, 0.75, 1)
    color: (0, 0, 0, 1)
    bold: True
    size_hint: (0.05, 0.05)