#:kivy 2.0

<LifePod>:
    display0: display0
    display1: display1
    display2: display2
    player: player

    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    PlayerChooser:
        id: player

    BoxLayout: # whole center area
        spacing: 5
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': .5, 'center_y': .5}
        MinusButton:
            id: minus
        BoxLayout: # blue buttons & screen frame
            spacing: 5
            size_hint: 0.6, 1.0
            orientation: 'vertical'
            BlueBoxLayout: # top 3 buttons
                EnterButton:
                    id: enter
                SpinButton:
                    id: spin
                UndoButton:
                    id: undo

            # display screen
            ScreenBoxLayout:
                orientation: 'vertical'
                ScreenLabel:  # used to display physical assets
                    id: display0
                ScreenLabel:  # used to display messages and dollars
                    id: display1
                ScreenLabel:  # used to echo user input
                    id: display2

            BlueBoxLayout: # bottom 2 buttons
                DollarUnitButton:
                    id: dollar_unit
                LifePointsUnitButton:
                    id: life_points_unit
        PlusButton:
            id: plus

    # Number buttons
    NumButton:
        text: "0"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "1"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "2"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "3"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "4"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "5"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "6"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "7"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "8"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "9"
        pos_hint: self._get_pos_hint()

    NumButton:
        text: "10"
        pos_hint: self._get_pos_hint()


<BlueBoxLayout@BoxLayout>:
    size_hint: 1, 0.25
    spacing: 5


<ScreenBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: (0.6, 0.6, 0.6, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<ScreenLabel@Label>:
    color: (0, 0, 0, 1)


<BlueButton>:
    background_normal: ''
    background_color: (0.2, 0.75, 1, 1)
    color: (0, 0, 0, 1)
    bold: True

<EnterButton>:
    text: "Enter"

<SpinButton>:
    text: "Spin"

<UndoButton>:
    text: "Undo"

<DollarUnitButton>:
    text: "$"

<LifePointsUnitButton>:
    text: "Life Points"


<RedButton>:
    background_normal: ''
    background_color: (1, 0, 0.2, 1)
    color: (0, 0, 0, 1)
    bold: True
    size_hint: 0.1, 0.15
    padding: 5
    pos_hint: {'center_x': .5, 'center_y': .5}

<MinusButton>
    text: "-"

<PlusButton>
    text: "+"


<NumButton>:
    background_normal: ''
    background_color: (0.75, 0.75, 0.75, 1)
    color: (0, 0, 0, 1)
    bold: True
    size_hint: (0.05, 0.05)


<PlayerChooser@BoxLayout>
    size_hint: (0.1, 0.20)
    pos_hint: {'top': 1, 'right': 1}
    orientation: 'vertical'
    Label:
        size_hint: (None, 0.30)
        color: (0, 0, 0, 1)
        font_size: 20
        text: 'Player'
    BoxLayout:
        size_hint: (None, 0.70)
        BoxLayout:
            size_hint: (0.25, None)
            orientation: 'vertical'
            PlayerRadio:
            PlayerRadio:
            PlayerRadio:
            PlayerRadio:

        BoxLayout:
            size_hint: (0.75, None)
            orientation: 'vertical'
            PlayerRed:
            PlayerYellow:
            PlayerGreen:
            PlayerBlue:


<PlayerRadio@CheckBox>:
    group: 'player'

<PlayerLabel@Label>:
    font_size: 12

<PlayerRed@PlayerLabel>
    text: "red"
    background_color: (1, 0, 0, 1)
    color: self.background_color
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<PlayerYellow@PlayerLabel>
    text: "yellow"
    background_color: (0, 1, 1, 1)
    color: self.background_color
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<PlayerGreen@PlayerLabel>
    text: "green"
    background_color: (0, 1, 0, 1)
    color: self.background_color
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<PlayerBlue@PlayerLabel>
    text: "blue"
    background_color: (0, 0, 1, 1)
    color: self.background_color
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
